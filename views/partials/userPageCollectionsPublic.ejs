<% if(groupings){ %>
<div class="publicPaperBack">
  <div class="collectionContainer mt-2 ">
    <div class="collectionNameFrame ml-3">
      <hr />
    </div>
    <div class="d-flex h-100 align-items-baseline">
      <p class="darkgrayFont" style="opacity:75%">Collections</p>
    </div>
    <div class="collectionNameFrame mr-3">
      <hr />
    </div>
  </div>

  <div class="d-flex justify-content-between">
    <div class="cltNavLeft d-flex align-items-center">
      <button class="noBackground border-0 h-100 expndCrdBtn">
        <i class="fas fa-chevron-left"></i>
      </button>
    </div>
    <div class="publicCollectionContainer">
      <% groupings.forEach(function(grouping) { %>

      <div class="collectionBackStop inline w-25 mt-2 mr-2 mb-2">
        <% if(grouping.groupingImageFile === "NOTHING TO SEE HERE") { %>
        <% var collectionImage = "/assets/defaultusericon.png" %>
        <% } else { %>
        <% var collectionImage = "/image/" + grouping.groupingImageFile %>
        <% } %>
        <div class="collectionImg orientation" image="<%= collectionImage %>"></div>

        <% var collectionRoute = "/user/" + userData.profileName + "/Collections/" + grouping.groupingName %>

        <div class="collectionheading">
          <h5><a class="whiteFont collectionLink" id="cltId<%=grouping._id %>" href="<%= collectionRoute %>">
              <%= grouping.groupingName %></a></h5>
          <input class="d-none collectionNameInput pl-1" id="editCltId<%=grouping._id %>" type="text" maxlength="25" rows="" name="" placeholder="<%= grouping.groupingName %>">
        </div>

      </div>

      <% }) %>
    </div>
    <div class="cltNavRight d-flex align-items-center">
      <button class="noBackground border-0 h-100 expndCrdBtn">
        <i class="fas fa-chevron-right"></i>
      </button>
    </div>
  </div>
  <div class="pl-4 pr-4 pt-1 pb-3">

  <% var userCollectionsRoute = "/user/" + userData.profileName + "/Collections" %>

  <form method="GET" action="<%= userCollectionsRoute %>">
    <button type="submit" class="d-flex align-items-center justify-content-center noBackground darkgrayFont opacity75 btnSeeCollections border-1 w-100 p-2">
      <i class="fas fa-th-large"></i>
      <p class="ml-2 noDefaultMargin">See All Collections</p>
    </button>
  </form>
  </div>

</div>
<% } %>
