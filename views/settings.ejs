<%- include('partials/headerLoggedIn') %>

<div class="container headerSpacing">
  <div class="row">
    <div class="col-md-9 m-auto">
      <!-- basic user info column -->
      <div class="card card-settings">
        <section>
          <h5>Basic User Information</h5>

          <hr class="settingsHr" />
        </section>
        <div class="row">
          <!-- biopic column -->
          <div class="col-md-3 m-auto">
            <div id="bioPicContainer">
              <div id="bioPic">
                <% if(userData.bioImageFile === "/assets/defaultusericon.png") { %>
                <% var userImage = userData.bioImageFile %>
                <% } else { %>
                <% var userImage = "/image/" + userData.bioImageFile %>
                <% } %>
                <div class="orientation" image="<%= userImage %>"></div>
              </div>
              <div class="settingsContentWrapper mt-2 mb-2">
                <button class="btn btn-primary">Change</button>
              </div>
            </div>
          </div>
          <!-- name & profilename column -->
          <div class="col-md-9">
            <div class="row mb-2">
              <div class="col-md-3 m-auto">
                <div class="text-center" id="userNameLabel">
                  <p>Profile Name</p>
                </div>
              </div>
              <div class="col-md-9">
                <div class="settingsInputWBtnContainer">
                  <div class="settingsInfoText" id="userNameContent">
                    <p class="settingInputText">
                      <%= userData.profileName %>
                    </p>
                  </div>
                  <div class="settingsBtnContainer" id="userNameEditBtn">
                    <button class="btn btn-primary">Edit</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="row mb-2">
              <div class="col-md-3 m-auto">
                <div class="text-center" id="firstNameLabel">
                  <p>First Name</p>
                </div>
              </div>
              <div class="col-md-9">
                <div class="settingsInputWBtnContainer">
                  <div class="settingsInfoText" id="firstNameContent">
                    <p class="settingInputText">
                      <%= userData.firstName %>
                    </p>
                  </div>
                  <div class="settingsBtnContainer" id="firstNameEditBtn">
                    <button class="btn btn-primary">Edit</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="row mb-2">
              <div class="col-md-3 m-auto">
                <div class="text-center" id="lastNameLabel">
                  <p>Last Name</p>
                </div>
              </div>
              <div class="col-md-9">
                <div class="settingsInputWBtnContainer">
                  <div class="settingsInfoText" id="lastNameContent">
                    <p class="settingInputText">
                      <%= userData.lastName %>
                    </p>
                  </div>
                  <div class="settingsBtnContainer" id="lastNameEditBtn">
                    <button class="btn btn-primary">Edit</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <br />

      <!-- login info column -->

      <div class="row">
        <div class="card card-settings">
          <div class="col-md-12 m-auto card">
            <div id="emailContainer"></div>
            <div id="passwordContainer"></div>
          </div>
        </div>
        <!-- Social Media accounts -->
        <div class="row card">
          <div class="col-md-12 m-auto">
            <div id="twitterContainer"></div>
            <div id="fBContainer"></div>
            <div id="iGContainer"></div>
          </div>
        </div>
      </div>
      <!-- Email Reminder Settings -->
      <div class="row">
        <div class="card card-settings">
          <!-- daily/weekly/monthly selector -->
          <div class="col-md-3 m-auto"></div>
          <!-- day of week selector -->
          <div class="col-md-3 m-auto"></div>
          <!-- time of day selector -->
          <div class="col-md-3 m-auto"></div>
          <!--on/off toggle -->
          <div class="col-md-3 m-auto"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>

